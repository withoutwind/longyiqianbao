<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_mainw"
    android:orientation="vertical"
    tools:context=".LoginActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/close"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/text_main"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_mainlin">

    </View>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:src="@drawable/icon_user_image_defult" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@null"
        android:hint="请输入您的登陆手机号"
        android:inputType="phone"
        android:textColor="@color/text_main3"
        android:textColorHint="@color/text_main2"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="@color/text_mainlin">

    </View>

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:inputType="textPassword"
        android:hint="请输入您的登陆密码"
        android:textColor="@color/text_main3"
        android:textColorHint="@color/text_main2"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="@color/text_mainlin">

    </View>
    <com.example.android.xiaolv.SuperButton
        android:id="@+id/denglu"
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:sSolidColor="@color/colorAccent"
        app:sCornersRadius="6dp"
        android:textColor="@color/text_mainw"
        android:text="登陆"
        android:textSize="18sp"
        android:layout_height="50dp" />
    <com.example.android.xiaolv.SuperButton
        android:id="@+id/zhuce"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:sSolidColor="@color/colorAccent"
        app:sCornersRadius="6dp"
        android:textColor="@color/text_mainw"
        android:text="注册"
        android:textSize="18sp"
        android:layout_height="50dp" />
    <FrameLayout
        android:id="@+id/creatbook_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>
</LinearLayout>

</RelativeLayout>